
@model Sklep_Internetowy.Models.Category

@{
    ViewBag.Title = "Stwórz kategorię";
}

<h2 style="text-align:center;">Stwórz kategorię</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name, "Proszę wprowadzić nazwę kategorii", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz nową kategorię" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróć do listy kategorii", "ListOfCategories")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
