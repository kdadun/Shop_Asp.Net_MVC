<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Sklep internetowy", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Produkty <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Lista kategorii", "ListOfCategories", "Categories")</li>
                        <li>@Html.ActionLink("Lista produktów", "ListProducts", "Products")</li>
                        <li>@Html.ActionLink("Wylosuj Produkt", "Index", "RandomProduct")</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Przeczytaj ważne!!!", "ShopRules", "Home")</li>
                @if (!User.IsInRole("Admin")&& User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Koszyk zakupów", "ListOfOrders", "Cart") </li>
                
                <li style="color:white;position: relative; left:10px; top: 14px;">Ilość produktów w koszyku (@Html.Action("GetCartIteamsCount", "Cart")) </li>
                }
            </ul>
               
            @Html.Partial("_LoginPartial")

        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
